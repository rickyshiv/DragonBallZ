<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:padding="8dp"
                android:background="@color/Orange"
                android:text="Send Message"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTonyStark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/goku"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goku"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="goku10@outlook.com"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textSize="18sp"
                android:layout_below="@id/txtName1"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textSize="18sp"
                android:layout_below="@id/txtEmail1"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/goku"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/imgTonyStark"
                android:layout_below="@id/txtPhone1"
                android:layout_alignParentRight="true"
                android:background="@color/Orange"
                android:text="Details"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSteveRogers"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/vegeta"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtName2"
                android:layout_width="wrap_content"
