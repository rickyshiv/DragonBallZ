<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#907FA4"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBrown"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/goku"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtSong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BROWN MUNDE REMIX"
                android:layout_toRightOf="@id/imgBrown"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"/>


            <Button
                android:id="@+id/btnSong1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/imgBrown"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txtSong1"
                android:layout_alignParentRight="true"
                android:background="@color/Orange"
                android:text="PLAY NOW !"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnStop1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/imgBrown"
                android:layout_marginTop="15dp"
                android:layout_below="@id/btnSong1"
                android:layout_alignParentRight="true"
                android:background="@color/Orange"
                android:text="STOP NOW!"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgFight"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/vegeta"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtSong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIGHT BACK"
                android:layout_toRightOf="@id/imgFight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="45dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"/>


            <Button
                android:id="@+id/btnSong2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/imgFight"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txtSong2"
                android:layout_alignParentRight="true"
                android:background="@color/Orange"
                android:text="PLAY NOW !"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnStop2"
