<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Orange"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTonyStark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/goku"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"/>


            <Button
                android:id="@+id/goku"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_below="@+id/imgTonyStark"

                android:background="@color/Orange"
                android:text="Saiyons"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSteveRogers"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/cell"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"/>


            <Button
                android:id="@+id/cell2"
                android:layout_width="140dp"
                android:layout_height="40dp"

        android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgSteveRogers"
                android:background="@color/Orange"
                android:text="Villans"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgThor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/battles"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"/>


            <Button
                android:id="@+id/gohan"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_below="@+id/imgThor"

                android:background="@color/Orange"
                android:text="BATTLES"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBruceBanner"
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp"
                android:src="@drawable/videos"
                android:layout_margin="20dp"/>


            <Button
                android:id="@+id/Ftrunks"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_below="@+id/imgBruceBanner"

                android:background="@color/Orange"
                android:text="VIDEOS"
                android:textColor="#ffffff"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBlackPanther"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/galleryy"
                android:layout_margin="20dp"/>


            <Button
                android:id="@+id/Goten"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_below="@+id/imgBlackPanther"

                android:background="@color/Orange"
                android:text="GALLERY"
                android:textColor="#ffffff"
                android:textStyle="bold"/>



        </RelativeLayout>



        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:textStyle="bold"
            android:layout_below="@id/txtMAIN"
            android:textColor="#ffffff"
            android:background="@color/Orange"
            android:layout_marginTop="20dp"/>



    </LinearLayout>

</ScrollView>